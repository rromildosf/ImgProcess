<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<VBox blendMode="DARKEN" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RGBDialogController">
   <children>
      <Label contentDisplay="CENTER" prefHeight="50.0" prefWidth="369.0" style="-fx-background-color: #f5f5f5;" text="Selecione as bandas que devem ser exibidas" textAlignment="CENTER" VBox.vgrow="ALWAYS">
         <padding>
            <Insets bottom="16.0" left="30.0" right="16.0" top="16.0" />
         </padding>
         <VBox.margin>
            <Insets right="1.0" />
         </VBox.margin>
      </Label>
      <GridPane prefWidth="332.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="416.0" minWidth="10.0" prefWidth="387.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="40.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="38.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="30.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <CheckBox fx:id="redChannel" mnemonicParsing="false" onAction="#onRed" text="Red">
               <GridPane.margin>
                  <Insets />
               </GridPane.margin>
            </CheckBox>
            <CheckBox fx:id="greenChannel" mnemonicParsing="false" onAction="#onGreen" text="Green" GridPane.rowIndex="1" />
            <CheckBox fx:id="blueChannel" mnemonicParsing="false" onAction="#onblue" text="Blue" GridPane.rowIndex="2" />
            <CheckBox fx:id="monoChannel" mnemonicParsing="false" onAction="#onMono" text="Mono" GridPane.rowIndex="3" />
         </children>
         <VBox.margin>
            <Insets left="30.0" top="16.0" />
         </VBox.margin>
      </GridPane>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="50.0" prefWidth="370.0">
         <children>
            <Button fx:id="cancelBtn" cancelButton="true" mnemonicParsing="false" onAction="#onCancel" text="Fechar">
               <HBox.margin>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="okBtn" defaultButton="true" mnemonicParsing="false" onAction="#onOk" text="OK" textAlignment="CENTER">
               <HBox.margin>
                  <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
               </HBox.margin>
            </Button>
         </children>
         <opaqueInsets>
            <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
         </opaqueInsets>
      </HBox>
   </children>
</VBox>
